<div class="container">

  <div class="sidebar">
    <% if @user.pitches.count < 4 %>
      <h2>Add a Pitch!</h2>
      <!-- form for adding a new pitch - currently does not work - this will work with AJAX -->
      <%= form_for :pitch, url: pitches_path do |f| %>
        Title: <%= f.text_field :working_title %>
        Description: <%= f.text_field :description %>
        <%= f.submit 'Add Pitch' %>
      <% end %>
    <% elsif @user.pitches.count >= 4 %>
      <h2>Thanks! You've already submitted four pitches.  Let the voting commence!</h2>
    <% end %>
  </div>

  <div class="main"

  <% if @pitches.any? %>
   <table id="round_1_pitches">
     <% @pitches.each do |pitch| %>
     <%= render partial: '/pitches/show', layout: false, locals: {pitch: pitch} %>
     <% end %>
   </table>
  <% end %>
    <div class="final-projects">
      <h2>Final Projects!</h2>
      <ul class="final-pitches">
        <% @pitches.each do |pitch| %>
          <% if pitch.round.name == "final" %>
            <li class="pitch">
              <%=  pitch.working_title %> - <%= pitch.description %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>

  </div>

</div>



<%= form_for :pitch, url: edit_pitch_path, method: 'put' do |f| %>
  <%= f.submit "submit vote" %>
<% end %>


